<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>

    <constant name="struts.enable.DynamicMethodInvocation" value="false" />
    <constant name="struts.devMode" value="true" />
    <package name="default" namespace="/" extends="json-default">
		<!-- 定义新的拦截器栈 -->
		<interceptors>
			<interceptor-stack name="bbsStack">
				<interceptor-ref name="paramsPrepareParamsStack">
					<param name="prepare.alwaysInvokePrepare">false</param>
				</interceptor-ref>
			</interceptor-stack>
		</interceptors>
		
		<default-interceptor-ref name="bbsStack"></default-interceptor-ref>
		<action name="user-*" class="userAction" method="{1}">
			<result name="granted">main.jsp</result>
			<result name="refused">register.jsp</result>
			<result name="register">login.jsp</result>
			<result name="setRecomFreq">setRecomTest.jsp</result>
			<result name="changeSucceed" type="json">
				<param name="root">status</param>
			</result>
			<result name="logout">login.jsp</result>
		</action>
		<action name="reservation-*" class="reservationAction" method="{1}">
			<result name="reservation">main.jsp</result>
			<result name="checkReservationList"></result>
		</action>
		<action name="au-*" class="authorizationAction" method="{1}">
			<result name="newMember">register.jsp</result>
			<result name="success">main.jsp</result>
			<result name="exist">main.jsp</result>
			<result name="error">login.jsp</result>
		</action>
		<action name="searchHistory-*" class="searchHistoryAction" method="{1}">
			<result name="search">booklist.jsp</result>
			<result name="bookSearch" type="json">
				<param name="root">books</param>
			</result>
			<result name="checkSearchHistory">searchHistory.jsp</result>
		</action>
		<action name="comment-*" class="commentAction" method="{1}">
			<result name="comment" type="json">
				<param name="root">status</param>
			</result>
		</action>
		<action name="book-*" class="bookAction" method="{1}" >
			<result name="bookDetails">book.jsp</result>
			<result name="bookList">booklist.jsp</result>
			<result type="json" name="listBooks">
				<param name="root">books</param>
			</result>
		</action>
		
		<action name="borrowedRecord-*" class="borrowedRecordAction" method="{1}">
			<result name="checkBorrowedRecord">searchHistory.jsp</result>
			<result name="createBorrowedRecord">borrowlist.jsp</result>
			<result name="outOfBorrowLimit"></result>
		</action>
    </package>

</struts>
